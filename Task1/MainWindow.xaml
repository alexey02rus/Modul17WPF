<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:Task1;assembly=ColorPicker"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <local:ColorPicker Height="100" VerticalAlignment="Center" Margin="20" HorizontalAlignment="Stretch" Padding="5" ColorChanged="ColorPicker_ColorChanged"/>
        <TextBox x:Name="txb" Text="The new color is #FF000000" FontSize="30" HorizontalAlignment="Center" BorderBrush="{x:Null}"/>
    </StackPanel>
</Window>
